2) THIRD LARGEST 
import java.util.*;
class sol{
    public static void main(String[] args){
        Scanner sc=new Scanner(System.in);
        int n=sc.nextInt();
        int[] arr=new int[n];
        for(int i=0;i<n;i++){
            arr[i]=sc.nextInt();
        }
        int max=Integer.MIN_VALUE;
        int secondmax=Integer.MIN_VALUE;
        int thirdmax=Integer.MIN_VALUE;
        for(int i=0;i<n;i++){
            if(arr[i]>max){
                thirdmax=secondmax;
                secondmax=max;
                max=arr[i];
            }
            else if(arr[i]>secondmax){
                thirdmax=secondmax;
                secondmax=arr[i];
            }
            else if(arr[i]>thirdmax){
                thirdmax=arr[i];
            }
        }
        System.out.print(thirdmax+" "+secondmax+" "+max);
    }
}
